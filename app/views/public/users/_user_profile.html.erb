<div class="image mb-3">
  <%= link_to user_path(user.id) do %>
    <%= image_tag user.get_profile_image(90,90), class: "profile_image" %>
  <% end %>
  <% if user.id == current_user.id %>
    <span class="ml-3">Me</span>
  <% else %>
    <span class="ml-3">Other</span>
  <% end %>
</div>

<table class="table table-striped">
  <tr>
    <th><i class="fa-solid fa-signature"></i> User name</th>
  </tr>
  <tr>
    <td><strong><%= user.name %></strong></td>
  </tr>
  <tr>
    <th><i class="fa-regular fa-hand"></i> Introduction</th>
  </tr>
  <tr>
    <td><strong><%= user.introduction %></strong></td>
  </tr>
</table>