<% if post.liked_by?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, remote: true do %>
  <i class="fa-solid fa-heart" style="color: #003366;"></i> <%= post.likes.count %> いいね
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true do %>
  <i class="fa-regular fa-heart" style="color: #003366;"></i> <%= post.likes.count %> いいね
  <% end %>
<% end %>