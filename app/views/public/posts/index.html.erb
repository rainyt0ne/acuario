<div class="container py-5">
  <div class="row justify-content-center mb-5">
    <!--検索フォーム呼び出し-->
    <% render '/public/searches/search' %>
  </div>

  <div class="row">
    <div class="col-md-2 text-center">
      <button type="button" class="btn btn-warning rounded-circle p-0 top-btn", style="width:10rem;height:10rem;">
        <h2><strong>Posts</strong></h2>
      </button><br>
      <button type="button" class="btn btn-warning rounded-circle p-0 mt-2 mr-5 top-btn", style="width:3rem;height:3rem;"></button><br>
      <button type="button" class="btn btn-warning rounded-circle p-0 mt-2 ml-5 top-btn", style="width:1rem;height:1rem;"></button><br>
      <button type="button" class="btn btn-warning rounded-circle p-0 mt-2 mr-3 top-btn", style="width:2rem;height:2rem;"></button>
    </div>

    <div class="col-md-9 offset-md-1">
      <!--投稿一覧呼び出し-->
      <%= render 'post_list', posts: @posts %>
      <%= paginate @posts %>
    </div>

  </div>
</div>