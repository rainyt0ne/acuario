<div class="container py-5">
  <div class="row">

    <div class="col-md-2 text-center mt-5">
      <button type="button" class="btn btn-secondary rounded-circle p-0 top-btn", style="width:10rem;height:10rem;">
        <h2><strong>Edit user profile</strong></h2>
      </button><br>
      <button type="button" class="btn btn-secondary rounded-circle p-0 mt-2 mr-5 top-btn", style="width:3rem;height:3rem;"></button><br>
      <button type="button" class="btn btn-secondary rounded-circle p-0 mt-2 ml-5 top-btn", style="width:1rem;height:1rem;"></button><br>
      <button type="button" class="btn btn-secondary rounded-circle p-0 mt-2 mr-3 top-btn", style="width:2rem;height:2rem;"></button>
    </div>

    <div class="col-md-9 offset-md-1 py-4">
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
      <table>
        <tr>
          <th class="p-3">Registration Date</th>
          <td class="p-3"><%= @user.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="p-3">Name</th>
          <td class="p-3"><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th class="p-3">E-mail</th>
          <td class="p-3"><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th class="p-3">Status</th>
          <td>
            <%= f.radio_button :is_withdrawal, :false, checked: true %>
            <%= f.label :is_withdrawal, '有効', { value: :false } %>
            <%= f.radio_button :is_withdrawal, :true %>
            <%= f.label :is_withdrawal, '退会済み', {value: :true} %>
          </td>
        </tr>
        <tr>
          <th class="p-3"><%= f.submit '変更を保存', class: 'btn btn-success' %></th>
          <th class="p-3"></th>
        </tr>
      </table>
      <% end %>
      <div class="m-3">
        <%= link_to 'Back', :back %>
      </div>
    </div>

  </div>
</div>